<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <mapping-file>resources/Cats.xml</mapping-file>
        <class>com.cathouse.app.model.Cats</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/cat_house"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
